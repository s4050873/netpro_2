private String getHeader(String url1,boolean flag){ 
         try { 
             URL url = new URL(url1+":80"); 
             URLConnection conn = url.openConnection(); 
              
             Map<String, List<String>> headerFields = conn.getHeaderFields(); 
              
             Set<String> headerFieldsSet = headerFields.keySet(); 
             Iterator<String> hearerFieldsIter = headerFieldsSet.iterator(); 
              
             while (hearerFieldsIter.hasNext()) { 
                  
                 String headerFieldKey = hearerFieldsIter.next(); 
                 List<String> headerFieldValue = headerFields.get(headerFieldKey); 
                  
                 StringBuilder sb = new StringBuilder(); 
                 for (String value : headerFieldValue) { 
                     sb.append(value); 
                     sb.append(""); 
                 } 
                 if (flag) 
                 jTextArea1.append(headerFieldKey + "=" + sb.toString()+"\n"); 
                 else 
                 jTextArea2.append(headerFieldKey + "=" + sb.toString()+"\n"); 
                  
             } 
              
         } catch (IOException ex) { 
             Logger.getLogger(assignment2.class.getName()).log(Level.SEVERE, null, ex); 
         } 
         return null; 
     } 
      
    
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        String address1=this.inputURL1.getText();
        String address2=this.inputURL2.getText();
    try{
        this.display1.setPage(address1);
        this.display2.setPage(address2);
        Thread A; 
         A = new Thread(new Runnable(){ 
             @Override
             public void run() {
                 
                     jTextArea1.setText("Start Thread 1\n");
                     getHeader(address1,true);
                     
                     jTextArea1.append("\nLoad Page"+address1);
                     
                     jTextArea1.append("\nFinished get Page"+address1);
                 
             } 
         });
         
         Thread B = new Thread(new Runnable(){ 
             @Override 
             public void run() { 
                 
                 jTextArea2.setText("Start Thread 2\n"); 
                 getHeader(address2,false); 
                  
                 jTextArea2.append("\nLoad Page"+address2); 
                 
                 jTextArea2.append("\nFinished get Page"+address2); 
                 
                 
             } 
         }); 
         A.start(); 
         B.start(); 
    }
    catch(Exception e){}


// TODO add your handling code here:
    }                                        

